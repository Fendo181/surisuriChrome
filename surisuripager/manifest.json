{
    // Required
    "manifest_version": 2,
    "name": "SurisuriPager",
    "version": "0.0.1",
  
    // Recommended
    "description": "My Mom said surisuri is No.1 Cool and Crazy Guy WTF!",
    "icons": {
      "16" : "icon/icon16.png",
      "48" : "icon/icon48.png",
      "128": "icon/icon128.png"
    },

    // Blowser pop
    "browser_action": {
      "default_popup": "index.html"
    },

    "content_scripts": [
      {
        "matches": ["https://suzuri.jp/surisurikun/journals/*"],
        "js": ["js/jquery-3.2.1.slim.min.js","js/autopager.js"]
      }
    ]
} 